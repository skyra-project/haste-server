{
	"name": "haste-server",
	"version": "1.0.0",
	"description": "Private Pastebin Server",
	"private": true,
	"scripts": {
		"start": "node src/backend/server.js",
		"dev": "run-s build start",
		"build": "parcel build src/frontend/index.html",
		"postbuild": "node scripts/copyRobots.mjs",
		"clean": "rimraf .parcel-cache dist data",
		"lint": "eslint src scripts --fix --ext js,ts,mjs",
		"format": "prettier --write src scripts"
	},
	"dependencies": {
		"@pnotify/core": "^5.2.0",
		"connect": "^3.7.0",
		"connect-ratelimit": "0.0.7",
		"connect-route": "0.1.5",
		"highlight.js": "^10.7.3",
		"redis": "3.1.2",
		"st": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.14.3",
		"@parcel/packager-raw-url": "2.0.0-beta.2",
		"@parcel/transformer-sass": "2.0.0-beta.2",
		"@parcel/transformer-webmanifest": "2.0.0-beta.2",
		"@sapphire/eslint-config": "^3.1.4",
		"@sapphire/prettier-config": "^1.1.3",
		"@sapphire/ts-config": "^2.2.3",
		"npm-run-all": "^4.1.5",
		"parcel": "2.0.0-beta.2",
		"prettier": "^2.3.1",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.2"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"resolutions": {
		"is-svg": "^4.3.1",
		"lodash": "^4.17.21",
		"merge": "^2.1.1",
		"trim": "^1.0.1",
		"normalize-url": "^4.5.1"
	}
}
